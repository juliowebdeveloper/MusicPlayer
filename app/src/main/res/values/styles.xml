<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>






    </style>
    <style name="titleStyle" parent="AppTheme">
        <item name="android:typeface">monospace</item>
        <item name ="android:textSize">20dp</item>
        <item name ="android:textAlignment">center</item>
        <item name="android:textColor">#343434</item>
    </style>



    <style name="subtitleStyle" parent="AppTheme">
        <item name="android:typeface">monospace</item>
        <item name ="android:textSize">10dp</item>
        <item name ="android:textAlignment">center</item>
        <item name="android:textColor">#343434</item>

    </style>



    <style name="subText" parent="AppTheme">
        <item name="android:typeface">monospace</item>
        <item name ="android:textSize">10dp</item>
    </style>

    <style name="musicaTitleRow" parent="AppTheme">

        <item name ="android:textSize">14dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>

    </style>


    <style name="musicaArtistRow" parent="AppTheme">
        <item name ="android:textSize">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

</resources>
